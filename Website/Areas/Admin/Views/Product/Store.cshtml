@{
    ViewBag.Title = "Store";
    Layout = "~/Areas/Admin/Views/Common/Layout.cshtml";
}

@model Website.Models.product
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Product
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Store", "Product", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label>pro_name</label>
                            @Html.TextBoxFor(m => m.pro_name, new { @class = "form-control", @placeholder = "pro_name" })
                        </div>
                        <div class="form-group">
                            <label>pro_slug</label>
                            @Html.TextBoxFor(m => m.pro_slug, new { @class = "form-control", @placeholder = "pro_slug" })
                        </div>
                        <div class="form-group">
                            <label>pro_category_id</label>
                            @Html.TextBoxFor(m => m.pro_category_id, new { @class = "form-control", @placeholder = "pro_category_id" })
                        </div>
                        <div class="form-group">
                            <label>pro_price</label>
                            @Html.TextBoxFor(m => m.pro_price, new { @class = "form-control", @placeholder = "pro_price" })
                        </div>
                        <div class="form-group">
                            <label>s_supplier_id</label>
                            @Html.TextBoxFor(m => m.s_supplier_id, new { @class = "form-control", @placeholder = "s_supplier_id" })
                        </div>
                        <div class="form-group">
                            <label>pro_sale</label>
                            @Html.TextBoxFor(m => m.pro_sale, new { @class = "form-control", @placeholder = "pro_sale" })
                        </div>
                        <div class="form-group">
                            <label>pro_active</label>
                            @Html.TextBoxFor(m => m.pro_active, new { @class = "form-control", @placeholder = "pro_active" })
                        </div>
                        <div class="form-group">
                            <label>pro_hot</label>
                            @Html.TextBoxFor(m => m.pro_hot, new { @class = "form-control", @placeholder = "pro_hot" })
                        </div>
                        <div class="form-group">
                            <label>pro_pay</label>
                            @Html.TextBoxFor(m => m.pro_pay, new { @class = "form-control", @placeholder = "pro_pay" })
                        </div>
                        <div class="form-group">
                            <label>pro_number</label>
                            @Html.TextBoxFor(m => m.pro_number, new { @class = "form-control", @placeholder = "pro_number" })
                        </div>
                        <div class="form-group">
                            <label>pro_waranty</label>
                            @Html.TextBoxFor(m => m.pro_waranty, new { @class = "form-control", @placeholder = "pro_waranty" })
                        </div>
                        <div class="form-group">
                            <label>pro_view</label>
                            @Html.TextBoxFor(m => m.pro_view, new { @class = "form-control", @placeholder = "pro_view" })
                        </div>
                        <div class="form-group">
                            <label>pro_description</label>
                            @Html.TextBoxFor(m => m.pro_description, new { @class = "form-control", @placeholder = "pro_description" })
                        </div>
                        <div class="form-group">
                            <label>pro_avatar</label>
                            @Html.TextBoxFor(m => m.pro_avatar, new { @class = "form-control", @placeholder = "pro_avatar" })
                        </div>
                        <div class="form-group">
                            <label>pro_description_seo</label>
                            @Html.TextBoxFor(m => m.pro_description_seo, new { @class = "form-control", @placeholder = "pro_description_seo" })
                        </div>
                        <div class="form-group">
                            <label>pro_keyword_seo</label>
                            @Html.TextBoxFor(m => m.pro_keyword_seo, new { @class = "form-control", @placeholder = "pro_keyword_seo" })
                        </div>
                        <div class="form-group">
                            <label>pro_title_seo</label>
                            @Html.TextBoxFor(m => m.pro_title_seo, new { @class = "form-control", @placeholder = "pro_title_seo" })
                        </div>
                        <div class="form-group">
                            <label>pro_content</label>
                            @Html.TextBoxFor(m => m.pro_content, new { @class = "form-control", @placeholder = "pro_content" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" value="Add Product" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


